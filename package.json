{
  "name": "@pplancq/lab-clean-architecture-react",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A living laboratory exploring Clean Architecture patterns in React through a real-world game collection management application.",
  "author": "Paul PLANCQ <paul.plancq@outlook.fr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/pplancq/lab-clean-architecture-react"
  },
  "packageManager": "npm@11.8.0",
  "type": "module",
  "scripts": {
    "start": "rsbuild dev",
    "start:mock": "rsbuild dev --env-mode mock",
    "build": "rsbuild build",
    "preview": "rsbuild preview",
    "test": "node scripts/test.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "node scripts/playwright.js test",
    "test:e2e:watch": "node scripts/playwright.js test --watch",
    "test:e2e:ui": "node scripts/playwright.js test --ui",
    "lint": "node scripts/lint.js",
    "lint:eslint": "eslint \"{mocks,public,src,tests}/**/*.{js,jsx,mjs,ts,tsx}\"",
    "lint:eslint:fix": "eslint \"{mocks,public,src,tests}/**/*.{js,jsx,mjs,ts,tsx}\" --fix",
    "lint:stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix",
    "lint:prettier": "prettier \"{mocks,public,src}/**/*.!(js|jsx|mjs|ts|tsx|scss|css)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier \"{mocks,public,src}/**/*.!(js|jsx|mjs|ts|tsx|scss|css)\" --write --ignore-unknown",
    "lint:tsc": "tsc --noEmit",
    "playwright:install": "playwright install",
    "playwright:show-report": "playwright show-report",
    "playwright:codegen": "playwright codegen",
    "package:check": "npm exec --yes package-lock-utd@1.1.3",
    "prepare": "husky",
    "postinstall": "msw init"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "inversify": "^7.11.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-router": "^7.13.0",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@bdellegrazie/playwright-sonar-reporter": "^0.4.0",
    "@commitlint/cli": "^20.4.1",
    "@msw/playwright": "^0.4.5",
    "@playwright/test": "^1.58.2",
    "@pplancq/commitlint-config": "^3.0.1",
    "@pplancq/eslint-config": "^6.0.1",
    "@pplancq/postcss-config": "^3.0.2",
    "@pplancq/prettier-config": "^2.0.0",
    "@pplancq/stylelint-config": "^5.0.0",
    "@rsbuild/core": "^1.7.3",
    "@rsbuild/plugin-eslint": "^1.2.1",
    "@rsbuild/plugin-react": "^1.4.5",
    "@rsbuild/plugin-sass": "^1.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "monocart-coverage-reports": "^2.12.9",
    "msw": "^2.12.9",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "rsbuild-plugin-stylelint": "^1.1.0",
    "stylelint": "^17.1.1",
    "stylelint-prettier": "^5.0.3",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18",
    "vitest-axe": "^1.0.0-pre.5",
    "vitest-sonar-reporter": "^3.0.0"
  },
  "overrides": {
    "rsbuild-plugin-stylelint": {
      "stylelint": "$stylelint"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": [
      "./public"
    ]
  }
}
